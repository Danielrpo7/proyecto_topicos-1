
<div class="low center-xs">
<h2>Crear cuenta</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, "Correo electrónico"%><br />
    <%= f.email_field :email, autofocus: true ,class:"div"%>
  </div>

  <div class="field">
    <%= f.label :password, "Contraseña" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off",class:"div" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,"Confirmar contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" ,class:"div"%>
  </div>

  <div class="actions">
    <%= f.submit "Crear",class:"boton" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
<div class="middle-xs">
  <img src="http://masquevinilo.com/5616-thickbox_default/vinilo-decorativo-saxofon.jpg"/>
</div>

</div>
